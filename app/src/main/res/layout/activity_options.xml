<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OptionsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <Button
            android:id="@+id/options_bt_theme"
            style="@style/WonderButton"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="THEME" />

        <Button
            android:id="@+id/options_bt_audio"
            style="@style/WonderButton"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="AUDIO" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/options_bt_lessCards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-" />

            <TextView
                android:id="@+id/options_txt_nbCartes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="center"
                android:textSize="20dp" />

            <Button
                android:id="@+id/options_bt_moreCards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+" />
        </LinearLayout>

        <Button
            android:id="@+id/options_bt_retour"
            style="@style/WonderButtonQuitter"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="RETOUR" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>